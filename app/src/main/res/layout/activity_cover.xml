<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sclyforgot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myst_white"
    android:scrollbarThumbVertical="@android:color/transparent"
    android:fillViewport="true"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:background="@color/myst_white"
        android:animateLayoutChanges="true"
        android:id="@+id/cover_container"
        android:focusable="true"
        android:focusableInTouchMode="true"
       >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_vertical_ten_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_percent="0.1"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_vertical_ninety_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_percent="0.9"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_covid_txt_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.05"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.17"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_image_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.22"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_image_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.48"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_or_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.50"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_or_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.56"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_get_id_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.58"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_get_id_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.75"
            android:orientation="horizontal"/>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_next_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.80"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_next_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.88"
            android:orientation="horizontal"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_covid_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Covid-19"
            android:textColor="@color/color_blue"
            android:textSize="20sp"
            android:gravity="left"
            android:textStyle="bold"
            android:visibility="gone"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toBottomOf="@+id/guid_covid_txt_top"
            app:layout_constraintStart_toEndOf="@+id/guide_vertical_ten_forgot_password"
            app:layout_constraintEnd_toStartOf="@+id/guide_vertical_ninety_forgot_password"
            />



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/scab_patient_id"
            android:textColor="@color/color_grey"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:id="@+id/txt_scan_title"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toBottomOf="@+id/guid_top"
            app:layout_constraintStart_toEndOf="@+id/guide_vertical_ten_forgot_password"
            app:layout_constraintEnd_toStartOf="@+id/guide_vertical_ninety_forgot_password"
         />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_scan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/scan"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/guid_image_top"
            app:layout_constraintStart_toEndOf="@+id/guide_vertical_ten_forgot_password"
            app:layout_constraintEnd_toStartOf="@+id/guide_vertical_ninety_forgot_password"
            app:layout_constraintBottom_toTopOf="@+id/guid_image_bottom"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_maiwai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textColor="@color/color_grey"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/guid_or_top"
            app:layout_constraintStart_toEndOf="@+id/guide_vertical_ten_forgot_password"
            app:layout_constraintEnd_toStartOf="@+id/guide_vertical_ninety_forgot_password"
            app:layout_constraintBottom_toTopOf="@+id/guid_or_bottom"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/guid_get_id_top"
            app:layout_constraintStart_toEndOf="@+id/guide_vertical_ten_forgot_password"
            app:layout_constraintEnd_toStartOf="@+id/guide_vertical_ninety_forgot_password"
            app:layout_constraintBottom_toTopOf="@+id/guid_get_id_bottom">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter User Id"
                android:textColor="@color/color_grey"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="8dp"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:textColorHint="@color/myst_black"
                android:background="@drawable/round_blue">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                    android:background="@null"
                    android:backgroundTint="@color/myst_white"
                    android:textColor="@color/color_grey"
                    android:textSize="16sp"
                    android:paddingBottom="17dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:includeFontPadding="true"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine = "true"
                    android:imeOptions="actionNext"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/guid_next_top"
            app:layout_constraintStart_toEndOf="@+id/guide_vertical_ten_forgot_password"
            app:layout_constraintEnd_toStartOf="@+id/guide_vertical_ninety_forgot_password"
            app:layout_constraintBottom_toTopOf="@+id/guid_next_bottom">



            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Next"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:enabled="false"
                android:gravity="center_vertical"
                android:background="@drawable/button_selector"
                android:textColor="@color/myst_white"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"/>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>